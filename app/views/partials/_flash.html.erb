<% if flash[:alert] %>
<div class="bg-red-100 mt-4 flex justify-center p-2 text-xl" role="alert">
    <p class="alert"><%= flash[:alert] %></p>
</div>
<% end %>


<% if flash[:notice] %>
<div class="bg-green-100 text-xl flex justify-center p-2 mt-4" role="alert">
    <p class="notice"><%= flash[:notice] %></p>
</div>
<% end %>
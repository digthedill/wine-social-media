<div class="border border p-4">

<h2 class="text-xl">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "my-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border p-2 my-2" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "my-2" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "border p-2 my-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions flex justify-center m-4">
    <%= f.submit "Log in", class: "bg-blue-200 px-8 py-1 rounded" %>
  </div>
<% end %>
<div class="flex justify-around">
<%= render "devise/shared/links" %>
</div>
</div>
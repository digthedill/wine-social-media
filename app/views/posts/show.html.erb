<div>
    <h1 class="text-2xl my-2"> <%= @post.name %> </h1>
    <img src=<%= @post.image %> />


    <p class="p-4">
        <%= @post.description %>
    </p>

    <p>
        <strong>Price:</strong>
        <%= @post.price %>
    </p>

    <p>
        <strong>User:</strong>
        <%= User.find(@post.user_id).username %> from <%= User.find(@post.user_id).location %>
    </p>
    <div>
        <% if @post.user_id == current_user.id %>
        <%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "p-2 m-2" %> |
        <% end %>
        <%= link_to 'Back', posts_path %>

    </div>
</div>